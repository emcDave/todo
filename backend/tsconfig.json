{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule":true,
    "baseUrl": "src",
    "noImplicitAny": true,
    "allowJs": true,
    "typeRoots": ["./src/types","./node_modules/@types" ],
  },
  "include": ["src/**/*"],
}
